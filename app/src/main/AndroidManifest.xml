<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.powerwalking.powerwalking">

    <application
        android:allowBackup="true"
        android:icon="@drawable/shoe"
        android:label="@string/app_name"
        android:roundIcon="@drawable/shoe"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GoalActivity" />
        <activity android:name=".goalStepsActivity" />
        <activity android:name=".goalMinutesActivity" />
        <activity android:name=".goalWeightActivity" />
        <activity android:name=".NewFeatureActivity" />
        <activity android:name=".VirtualWalkingActivity" />
        <activity android:name=".VitualWalkingPlayActivity" />
        <activity android:name=".LongTermScheduleActivity" />
        <activity android:name=".StaticsActivity" />
        <activity android:name=".MyStaticsActivity" />
        <activity android:name=".WorldStaticsActivity" />
        <activity android:name=".VirtualWalkingAboutActivity"></activity>
    </application>

</manifest>