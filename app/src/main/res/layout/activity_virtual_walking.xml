<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.powerwalking.powerwalking.VirtualWalkingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Virtual walking"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:padding="20dp"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:background="@color/colorAccent"/>

            </RelativeLayout>

            <Button
                android:id="@+id/activity_virtual_walking_button_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Play"
                android:textColor="#fff"
                android:textSize="25dp"
                android:padding="20dp"/>

            <Button
                android:id="@+id/activity_virtual_walking_button_statics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#4d4d4d"
                android:text="Statics"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"/>

            <Button
                android:id="@+id/activity_virtual_walking_button_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8c8c8c"
                android:text="About"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"/>

            <Button
                android:id="@+id/activity_virtual_walking_button_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="Exit"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
