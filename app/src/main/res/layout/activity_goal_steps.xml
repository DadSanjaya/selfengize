<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.powerwalking.powerwalking.goalStepsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pick a goal"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:padding="20dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:background="@color/colorAccent"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <Button
                        android:id="@+id/activity_goal_steps_textview_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8,000"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:padding="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@color/black"
                        android:layout_weight="1"
                        android:layout_margin="5dp"/>

                    <Button
                        android:id="@+id/activity_goal_steps_textview_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10,000"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:padding="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/activity_goal_steps_textview_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12,000"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:padding="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_margin="5dp"/>

                    <Button
                        android:id="@+id/activity_goal_steps_textview_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="14,000"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:padding="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
